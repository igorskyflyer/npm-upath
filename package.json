{
	"name": "@igor.dvlpr/upath",
	"version": "2.1.1",
	"description": "🎍 Provides a universal way of formatting file-paths in Unix-like and Windows operating systems as an alternative to the built-in path.normalize(). 🧬",
	"engines": {
		"node": ">=12.17"
	},
	"sideEffects": false,
	"main": "./src/index",
	"exports": {
		".": {
			"require": "./src/index.js",
			"import": "./src/index.mjs"
		}
	},
	"module": "./src/index.mjs",
	"types": "./dist/index",
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"test": "mocha",
		"pub": "npm test && tsc && npm publish --access public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/igorskyflyer/npm-upath.git"
	},
	"keywords": [
		"upath",
		"file",
		"path",
		"os",
		"utility",
		"igordvlpr"
	],
	"author": "Igor Dimitrijević",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/igorskyflyer/npm-upath/issues"
	},
	"homepage": "https://github.com/igorskyflyer/npm-upath#readme",
	"devDependencies": {
		"@types/chai": "^4.2.21",
		"@types/mocha": "^9.0.0",
		"@types/node": "^12.17.0",
		"chai": "^4.3.4",
		"mocha": "^9.0.3",
		"typescript": "^4.7.4"
	},
	"dependencies": {
		"@igor.dvlpr/unc-path": "^2.1.0"
	}
}
